<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/category_local">

        <ListPreference
            android:key="@string/pref_units_key"
            android:title="@string/pref_units_title"
            android:entries="@array/pref_units_entries"
            android:entryValues="@array/pref_units_values"
            android:defaultValue="@string/pref_units_default" />

        <com.asis.chasm.geolocal.CoordPairPreference
            android:key="@string/perf_local_base_key"
            android:title="@string/perf_local_base_title"
            android:dialogTitle="@string/perf_local_base_dialog_title"
            android:defaultValue="@string/pref_local_base_default" />

        <ListPreference
            android:key="@string/pref_projection_key"
            android:title="@string/pref_projection_title"
            android:entries="@array/pref_projection_entries"
            android:entryValues="@array/pref_projection_values"
            android:defaultValue="@string/pref_projection_default" />

    </PreferenceCategory>

</PreferenceScreen>