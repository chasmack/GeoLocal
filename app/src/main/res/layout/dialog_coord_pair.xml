<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/firstCoord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp" >

        <TextView
            android:id="@+id/firstCoordTitle"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/pref_local_base_first_title" />

        <EditText
            android:id="@+id/firstCoordValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:background="#00000000"
            android:inputType="numberDecimal|numberSigned"
            android:gravity="right"
            android:minWidth="60dp"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/firstCoordSuffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondCoord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp" >

        <TextView
            android:id="@+id/secondCoordTitle"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/pref_local_base_second_title" />

        <EditText
            android:id="@+id/secondCoordValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:background="#00000000"
            android:inputType="numberDecimal|numberSigned"
            android:gravity="right"
            android:minWidth="60dp"
            android:imeOptions="actionDone" />

        <TextView
            android:id="@+id/secondCoordSuffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:text="@string/local_base_message" />

</LinearLayout>