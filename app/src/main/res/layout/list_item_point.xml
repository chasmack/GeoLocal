<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp" >

    <TextView
        android:id="@+id/point_type"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textSize="11sp"
        android:background="@drawable/bg_list_item_point_type"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/point_type"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/name"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/coord_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/point_type"
        android:layout_alignParentBottom="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/coord_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/coord_prefix"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="14sp" />

</RelativeLayout>