<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="@android:style/Theme.Holo.Light">
        <item name="android:spinnerItemStyle">
            @style/customSpinnerItemStyle
        </item>
        <item name="android:spinnerDropDownItemStyle">
            @style/customSpinnerDropDownItemStyle
        </item>
    </style>

    <style name="customSpinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
    </style>

    <style name="customSpinnerDropDownItemStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_spinner_dropdown_item_border</item>
    </style>

</resources>
